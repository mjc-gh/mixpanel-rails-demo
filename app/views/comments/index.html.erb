<p style="color: green"><%= notice %></p>

<h1>Comments</h1>

<div id="comments">
  <% @comments.each do |comment| %>
    <%= render comment %>

    <% if comment.posted_by == current_user -%>
      <p>
        <%= link_to "Edit this comment", edit_article_comment_path(@article, comment) %>
      </p>
      <p>
        <%= form_with url: article_comment_path(@article, comment), method: :delete do %>
          <button type="submit">Delete</button>
        <% end -%>
      </p>
    <% end -%>
  <% end %>
</div>

<%= link_to "New comment", new_article_comment_path(@article) %>
